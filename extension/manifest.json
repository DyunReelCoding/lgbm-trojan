{
    "manifest_version": 3,
    "name": "Trojan Detector",
    "version": "1.0",
    "description": "Detect Trojan websites and provide options to go back or continue.",
    "permissions": ["activeTab", "scripting", "http://*/", "https://*/"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "host_permissions": ["http://*/", "https://*/"]
  }
  